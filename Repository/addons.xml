<?xml version="1.0" encoding="UTF-8"?>
<addons>
  <!-- AANOTHERWORLD Repository Add-on -->
  <addon id="repository.aanotherworld"
         name="AANOTHERWORLD Repo"
         version="1.0.0"
         provider-name="AANOTHERWORLD">
    <requires>
      <import addon="xbmc.addon" version="16.1.000"/>
    </requires>
    <extension point="xbmc.addon.repository" name="AANOTHERWORLD Repo">
      <info compressed="false">https://raw.githubusercontent.com/AANOTHERWORLD/KODI_PERSONAL/main/Repository/addons.xml</info>
      <checksum>https://raw.githubusercontent.com/AANOTHERWORLD/KODI_PERSONAL/main/Repository/addons.xml.md5</checksum>
      <datadir zip="true">https://raw.githubusercontent.com/AANOTHERWORLD/KODI_PERSONAL/main/Repository/zips/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Personal Kodi repository hosting the AANOTHERWORLD Wizard</summary>
      <description>Install this repository to access and auto-update your AANOTHERWORLD Wizard and other add-ons.</description>
      <platform>all</platform>
    </extension>
  </addon>

  <!-- AANOTHERWORLD Wizard Add-on -->
  <addon id="plugin.program.aanotherworldwizard"
         name="AANOTHERWORLD Wizard"
         version="1.0.0"
         provider-name="AANOTHERWORLD">
    <requires>
      <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="addon.py" />
    <extension point="xbmc.addon.metadata">
      <summary>AANOTHERWORLD Wizard</summary>
      <description>Installs, updates, and manages your AANOTHERWORLD Kodi build directly from GitHub.</description>
      <platform>all</platform>
    </extension>
  </addon>
</addons>
