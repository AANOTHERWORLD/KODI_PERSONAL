<?xml version="1.0" encoding="UTF-8"?>
<addons>
  <!-- AANOTHERWORLD Repository Add-on -->
  <addon id="repository.aanotherworld"
         name="AANOTHERWORLD Repo"
         version="1.0.0"
         provider-name="AANOTHERWORLD">
    <requires>
      <import addon="xbmc.addon" version="16.1.000"/>
    </requires>
    <extension point="xbmc.addon.repository" name="AANOTHERWORLD Repo">
      <info compressed="false">https://raw.githubusercontent.com/AANOTHERWORLD/KODI_PERSONAL/main/Repository/addons.xml</info>
      <checksum>https://raw.githubusercontent.com/AANOTHERWORLD/KODI_PERSONAL/main/Repository/addons.xml.md5</checksum>
      <datadir zip="true">https://raw.githubusercontent.com/AANOTHERWORLD/KODI_PERSONAL/main/Repository/zips/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
      <summary>Personal Kodi repository hosting the AANOTHERWORLD Wizard</summary>
      <description>Install this repository to access and auto-update your AANOTHERWORLD Wizard and other add-ons.</description>
      <platform>all</platform>
    </extension>
  </addon>

  <addon id="plugin.program.openwizard"
         name="[COLOR limegreen]Open[/COLOR]Wizard"
         version="2.0.7"
         provider-name="drinfernoo, slamious">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="xbmc.service" library="startup.py" start="startup" />
    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR limegreen]Open[/COLOR]Wizard</summary>
        <description lang="en">[COLOR limegreen]Open[/COLOR]Wizard offers many maintenance features, selective add-on data saving, and automated build installs.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://www.github.com/a4k-openproject/plugin.program.openwizard/</source>
    </extension>
  </addon>
</addons>
